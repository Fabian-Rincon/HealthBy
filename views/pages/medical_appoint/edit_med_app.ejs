    <section>
        <% if (cita_medica) { %>  
            <div class="formulario">
                <form action="/update_citas_medicas" method="post">
                    <h2>Editar Cita Médica</h2>

                    <!-- Info de la Cita -->

                    <label class="labform" for="cod_cit_med"> Código de la Cita médica </label>
                        <input type="number" name="cod_cit_med" id="cod_cit_med" value="<%= cita_medica.cod_cit_med %>" readonly>
                        
                    <label class="labform" for="esp_cit_med"> Especialista que atenderá </label>
                        <select name="esp_cit_med" id="esp_cit_med" required>
                                <!-- <option value=""> Selecciona una opción </option> -->
                                <option <%= cita_medica.esp_cit_med=='Dr. Alejandro Sánchez' ? "selected" : '' %> value="Dr. Alejandro Sánchez"> Dr. Alejandro Sánchez </option>
                                <option <%= cita_medica.esp_cit_med=='Dra. Laura Rodríguez' ? "selected" : '' %> value="Dra. Laura Rodríguez"> Dra. Laura Rodríguez </option>
                                <option <%= cita_medica.esp_cit_med=='Dr. Carlos Medina' ? "selected" : '' %> value="Dr. Carlos Medina"> Dr. Carlos Medina </option>
                        </select>

                    <label class="labform" for="fyh_cit_med"> Fecha y hora de la cita médica</label>
                        <input type="datetime-local" name="fyh_cit_med" id="fyh_cit_med" value="<%= cita_medica.fyh_cit_med %>" required>

                    <label class="labform" for="mot_cit_med"> Motivo de la cita médica </label>
                        <textarea name="mot_cit_med" id="mot_cit_med" required><%= cita_medica.mot_cit_med %></textarea required>
                    
                    <!-- Info del paciente -->

                    <label class="labform" for="nom_pac_cit_med">Nombre del paciente</label>
                        <input type="text" name="nom_pac_cit_med" id="nom_pac_cit_med" value="<%= cita_medica.nom_pac_cit_med %>" required>

                    <label class="labform" for="fk_num_doc_pac"> Número de documento del paciente</label>
                        <input type="text" name="fk_num_doc_pac" id="num_doc_pac" value="<%= cita_medica.fk_num_doc_pac %>" required>

                    <label class="labform" for="tel_cit_med">Número de teléfono del paciente</label>
                        <input type="number" name="tel_cit_med" id="tel_cit_med" value="<%= cita_medica.tel_cit_med %>" required>

                    <label class="labform" for="cor_ele_cit_med">Correo electrónico del paciente</label>
                        <input type="email" name="cor_ele_cit_med" id="cor_ele_cit_med" value="<%= cita_medica.cor_ele_cit_med %>" required>

                        <!-- Botón Original -->
                    <input type="submit" value="Actualizar cita médica" class="edit_med_appbtn">
                    <a href="mod_med_app" class="cancelbtn">Cancelar</a>

                        <!-- Botón Remplazo -->
                    <!-- <a href="mod_med_app" class="edit_med_app">Actualizar cita médica</a> -->
                </form>
            </div>
        <% } %>
    </section>
</body>
