    <section>
        <div class="formulario">
            <form action="/save_municipios" method="POST">
                <h2>Añadir Municipio</h2>
            
                <!-- Info del municipio -->

                <label class="labform" for="cod_mun"> Código del municipio </label>
                    <input type="number" id="cod_mun" name="cod_mun" placeholder="MP100" readonly>
            
                <label class="labform" for="nom_mun">Nombre del municipio</label>
                    <input type="text" id="nom_mun" name="nom_mun" required>
            
                <label class="labform" for="num_afi_mun">Número de afiliados</label>
                    <input type="number" id="num_afi_mun" name="num_afi_mun" required>
            
                <label class="labform" for="fk_nom_dep"> Departamento al que pertenece </label>
                    <select name="fk_nom_dep" id="fk_nom_dep" required>
                        <option value="">Selecciona una opción</option>
                        <option value="Cundinamarca">Cundinamarca</option>
                    </select>
            
                <!-- Botón Original -->
                <input type="submit" value="Añadir municipio" class="add_municipalitybtn">
            
                <!-- Botón Remplazo -->
                <!-- <a href="" class="add_municipality">Añadir municipio</a> -->
            </form>
        </div>
    </section>
