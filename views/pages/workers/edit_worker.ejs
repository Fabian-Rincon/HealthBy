                <img class="tituhealthby" src="../../img/Tit_HealthBy.png" alt="HealthBy">
        </a>

        <ul class="men_hor">
                <li><a href="../home">Inicio</a></li>
                <li><a href="#municipios">Municipios <i id="menu" class="fa-solid fa-angle-down"></i></a>
                <ul class="men_ver">
                    <li><a href="../municipalities/add_municipality">Añadir</a></li>
                    <li><a href="../municipalities/mod_municipality">Modificar</a></li>
                </ul>
                </li>
                <li><a href="#sedes">Sedes <i id="menu" class="fa-solid fa-angle-down"></i></a>
                <ul class="men_ver">
                    <li><a href="../headquarters/add_headquarters">Añadir</a></li>
                    <li><a href="../headquarters/mod_headquarters">Modificar</a></li>
                </ul>
                </li>
                <li><a href="#trabajadores" class="active">Trabajadores <i id="menu" class="fa-solid fa-angle-down"></i></a>
                <ul class="men_ver">
                    <li><a href="../workers/add_worker">Añadir</a></li>
                    <li class="dif_men"><a class="active" href="../workers/mod_worker">Modificar</a></li>
                    <li><a href="../laboral_category_workers/add_lab_cat">Añd. Cat. Lab.</a></li>
                    <li class="dif_men"><a href="../laboral_category_workers/mod_lab_cat">Mod. Cat. Lab.</a></li>
                    <li><a href="../speciality_workers/add_spe_work">Añd. Espec.</a></li>
                    <li><a href="../speciality_workers/mod_spe_work">Mod. Espec.</a></li>
                </ul>
                </li>
                <li><a href="#pacientes">Pacientes <i id="menu" class="fa-solid fa-angle-down"></i></a>
                <ul class="men_ver">
                    <li><a href="../patients/add_patient">Añadir</a></li>
                    <li><a href="../patients/mod_patient">Modificar</a></li>
                </ul>
                </li>
                <li><a href="#citasmedicas">Citas Médicas <i id="menu"  class="fa-solid fa-angle-down"></i></a>
                <ul class="men_ver">
                    <li><a href="../medical_appoint/add_med_app">Añadir</a></li>
                    <li><a href="../medical_appoint/mod_med_app">Modificar</a></li>
                </ul>
                </li>
                <li><a class="profile" href="#mi perfil">Mi perfil <i id="menu"  class="fa-solid fa-angle-down"></i></a>
                <ul class="men_ver">
                    <li><a href="../account/edit_data">Modificar datos</a></li>
                    <li><a href="../account/mod_password">Cambiar contraseña</a></li>
                </ul>
